---
import Layout from '../layouts/Layout.astro';
import PluginsList from '../components/PluginsList';
import Footer from '../components/Footer';
---

<Layout title="Mods & Plugins - Hak SMP" currentPage="plugins">
  <div class="page-wrapper">
    <main class="utrecht-page">
      <PluginsList client:load />
    </main>
  </div>
  <Footer />
</Layout>

<style>
  .page-wrapper {
    min-height: 100vh;
    background: #1a1a2e;
  }

  .utrecht-page {
    max-width: none;
    margin: 0;
    padding: 0 24px 0 12%;
    background: #1a1a2e;
  }

  @media (min-width: 768px) {
    .utrecht-page {
      padding: 0 48px 0 12%;
    }
  }

  @media (min-width: 1024px) {
    .utrecht-page {
      padding: 0 64px 0 12%;
    }
  }
</style>