---
import Layout from '../layouts/Layout.astro';
import YouTubeVideo from '../components/YouTubeVideo.astro';
import DiscordButton from '../components/DiscordButton.astro';
import AnimatedGrid from '../components/AnimatedGrid.astro';
import Footer from '../components/Footer';

---

<Layout>
  <section class="test-hero">
    <AnimatedGrid />
    <div class="container">
      <h1 class="logo-title">
        <img 
          src="/images/hak-smp-logo.png" 
          alt="HAK SMP - Landen & Dorpen Editie"
          class="main-logo"
          width="800"
          height="200"
        />
        <span class="sr-only">HAK SMP - Landen & Dorpen Editie</span>
      </h1>
      <h2 class="subtitle">OfficiÃ«le Aankondiging</h2>
      
      <YouTubeVideo videoId="-LZS2wb-7HM" title="HAK SMP - Landen & Dorpen Editie Aankondiging" />  
      
        <div class="utrecht-button-group">
          <DiscordButton inviteCode="BRrHTwFDzW" size="large">
            Join alvast de Discord
          </DiscordButton>
          
          <a href="/plugins" class="utrecht-link-button utrecht-link-button--large plugins-button">
            Bekijk Mods & Plugins
          </a>
        </div>
    </div>
  </section>
  <Footer />
</Layout>

<style>
  /* Utrecht Button Group */
  .utrecht-button-group {
    display: flex;
    gap: 16px;
    margin-top: var(--space-lg);
    margin-bottom: var(--space-xl);
    align-items: center;
    flex-wrap: wrap;
    justify-content: center;
  }

  /* Utrecht Link Button - Plugins Button Style */
  .utrecht-link-button.plugins-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 16px 24px 12px 24px;
    border: 3px solid hsl(80, 91%, 27%);
    border-radius: 0;
    background: hsl(80, 91%, 27%);
    color: #ffffff;
    text-decoration: none;
    font-family: var(--font-family-secondary);
    font-weight: 400;
    font-size: 1.125rem;
    cursor: pointer;
    transition: none;
    position: relative;
    box-shadow: 0 6px 0 #0b0c0c;
    min-height: 44px;
    min-width: 44px;
    flex: 0 0 auto;
    -webkit-tap-highlight-color: transparent;
  }

  .utrecht-link-button.plugins-button:hover:not(:disabled) {
    background: hsl(80, 91%, 17%);
    border-color: hsl(80, 91%, 26%);
    transform: translateY(-2px);
    box-shadow: 0 2px 0 #0b0c0c;
  }

  .utrecht-link-button.plugins-button:active:not(:disabled) {
    background: hsl(80, 91%, 17%);
    border-color: hsl(80, 91%, 17%);
    transform: translateY(4px);
    box-shadow: 0 0 0 #0b0c0c;
  }

  /* Focus visible on ALL devices including mobile */
  .utrecht-link-button.plugins-button:focus {
    outline: 3px dotted #ffdd00;
    outline-offset: 2px;
  }

  .utrecht-link-button.plugins-button:focus-visible {
    outline: 3px dotted #ffdd00;
    outline-offset: 2px;
  }

  /* Ensure focus is visible on tap for mobile */
  @media (hover: none) and (pointer: coarse) {
    .utrecht-link-button.plugins-button:focus {
      outline: 3px dotted #ffdd00;
      outline-offset: 2px;
    }
    
    .utrecht-link-button.plugins-button:active:focus {
      outline: 3px dotted #ffdd00;
      outline-offset: 2px;
    }
  }

  .utrecht-link-button.plugins-button:disabled,
  .utrecht-link-button.plugins-button[aria-disabled="true"] {
    background: hsl(80, 91%, 7%);
    border-color: hsl(80, 91%, 7%);
    color: rgba(255, 255, 255, 0.6);
    cursor: not-allowed;
    pointer-events: none;
  }

  /* Logo title styling */
  .test-hero .logo-title {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: var(--space-lg);
    margin-bottom: var(--space-sm);
    position: relative;
  }

  .main-logo {
    max-width: 100%;
    height: auto;
    width: clamp(250px, 45vw, 500px);
    filter: drop-shadow(4px 4px 8px rgba(0, 0, 0, 0.5));
    transition: transform 0.3s ease;
  }

  .main-logo:hover {
    transform: scale(1.02);
  }

  /* Screen reader only text */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  /* Subtitle styling */
  .test-hero .subtitle {
    font-family: "Monocraft", "Minecraft-Seven", var(--root-font-family--secondary);
    font-size: clamp(0.9rem, 2.5vw, 1.2rem);
    color: var(--root-color--support);
    margin-bottom: var(--space-xs);
    text-shadow: 2px 2px 0 rgba(0, 0, 0, 0.3);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .utrecht-button-group {
      flex-direction: column;
      gap: 12px;
      margin-top: var(--space-md);
      margin-bottom: var(--space-lg);
    }
    
    .plugins-button {
      width: 100%;
      min-width: auto;
    }

    .test-hero .logo-title {
      margin-top: var(--space-sm);
      margin-bottom: var(--space-lg);
    }

    .main-logo {
      width: clamp(200px, 55vw, 400px);
    }

    .test-hero .subtitle {
      font-size: clamp(0.85rem, 3vw, 1.1rem);
      margin-bottom: var(--space-sm);
    }
  }

  @media (max-width: 480px) {
    .utrecht-button-group {
      margin-top: var(--space-xl);
      margin-bottom: var(--space-lg);
    }

    .test-hero .logo-title {
      margin-top: var(--space-xs);
      margin-bottom: var(--space-lg);
    }

    .main-logo {
      width: clamp(180px, 70vw, 320px);
    }

    .test-hero .subtitle {
      font-size: clamp(0.8rem, 3.5vw, 1rem);
      margin-bottom: var(--space-xs);
    }
  }
</style>