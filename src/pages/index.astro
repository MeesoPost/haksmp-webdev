---
import Layout from '../layouts/Layout.astro';
import FlipClock from '../components/FlipClock.astro';
import DiscordButton from '../components/DiscordButton.astro';
import AnimatedGrid from '../components/AnimatedGrid.astro';
import Footer from '../components/Footer';

---

<Layout>
  <section class="test-hero">
    <AnimatedGrid />
    <div class="container">
      <h1>Hak SMP</h1>
      <h2 class="subtitle">Seizoen 4: Het Landen Systeem</h2>
      
      <FlipClock />
      
        <div class="utrecht-button-group">
          <DiscordButton href="#" size="large">
            Join alvast de Discord
          </DiscordButton>
          
          <a href="/plugins" class="utrecht-link-button utrecht-link-button--large plugins-button">
            Bekijk Mods & Plugins
          </a>
        </div>
    </div>
  </section>
  <Footer />
</Layout>

<style>
  /* Utrecht Button Group */
  .utrecht-button-group {
    display: flex;
    gap: 16px;
    margin-top: 24px;
    align-items: center;
    flex-wrap: wrap;
    justify-content: center;
  }

  /* Utrecht Link Button - Plugins Button Style */
  .utrecht-link-button.plugins-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 16px 24px 12px 24px;
    border: 3px solid hsl(80, 91%, 27%);
    border-radius: 0;
    background: hsl(80, 91%, 27%);
    color: #ffffff;
    text-decoration: none;
    font-family: var(--font-family-secondary);
    font-weight: 400;
    font-size: 1.125rem;
    cursor: pointer;
    transition: none;
    position: relative;
    box-shadow: 0 6px 0 #0b0c0c;
    min-height: 44px;
    min-width: 44px;
    flex: 0 0 auto;
    -webkit-tap-highlight-color: transparent;
  }

  .utrecht-link-button.plugins-button:hover:not(:disabled) {
    background: hsl(80, 91%, 17%);
    border-color: hsl(80, 91%, 26%);
    transform: translateY(-2px);
    box-shadow: 0 2px 0 #0b0c0c;
  }

  .utrecht-link-button.plugins-button:active:not(:disabled) {
    background: hsl(80, 91%, 17%);
    border-color: hsl(80, 91%, 17%);
    transform: translateY(4px);
    box-shadow: 0 0 0 #0b0c0c;
  }

  /* Focus visible on ALL devices including mobile */
  .utrecht-link-button.plugins-button:focus {
    outline: 3px dotted #ffdd00;
    outline-offset: 2px;
  }

  .utrecht-link-button.plugins-button:focus-visible {
    outline: 3px dotted #ffdd00;
    outline-offset: 2px;
  }

  /* Ensure focus is visible on tap for mobile */
  @media (hover: none) and (pointer: coarse) {
    .utrecht-link-button.plugins-button:focus {
      outline: 3px dotted #ffdd00;
      outline-offset: 2px;
    }
    
    .utrecht-link-button.plugins-button:active:focus {
      outline: 3px dotted #ffdd00;
      outline-offset: 2px;
    }
  }

  .utrecht-link-button.plugins-button:disabled,
  .utrecht-link-button.plugins-button[aria-disabled="true"] {
    background: hsl(80, 91%, 7%);
    border-color: hsl(80, 91%, 7%);
    color: rgba(255, 255, 255, 0.6);
    cursor: not-allowed;
    pointer-events: none;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .utrecht-button-group {
      flex-direction: column;
      gap: 12px;
    }
    
    .plugins-button {
      width: 100%;
      min-width: auto;
    }
  }

  @media (max-width: 480px) {
    .utrecht-button-group {
      margin-top: 20px;
    }
  }
</style>