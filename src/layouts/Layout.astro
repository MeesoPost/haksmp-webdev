---
interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "HAK - Seizoen 4 | Het Landen Systeem",
  description = "Join HAK Seizoen 4: Het Landen Systeem. Bouw je eigen koninkrijk met vrienden, unlock territorium, en creÃ«er epische avonturen!"
} = Astro.props;
---

<!DOCTYPE html>
<html lang="nl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title}</title>

  <!-- Favicon - multiple formats for better compatibility -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="icon" type="image/png" href="/favicon/favicon-32x32.png" sizes="32x32">
  <link rel="icon" type="image/png" href="/favicon/favicon-16x16.png" sizes="16x16">
  <link rel="shortcut icon" href="/favicon/favicon.ico">
  <link rel="apple-touch-icon" href="/favicon/apple-touch-icon-152x152.png" sizes="152x152">
  <link rel="apple-touch-icon" href="/favicon/apple-touch-icon-120x120.png" sizes="120x120">
  <link rel="apple-touch-icon" href="/favicon/apple-touch-icon-76x76.png" sizes="76x76">
  <link rel="apple-touch-icon" href="/favicon/apple-touch-icon-60x60.png" sizes="60x60">
  <meta name="msapplication-TileImage" content="/favicon/mstile-144x144.png">
  <meta name="msapplication-TileColor" content="#B22D36">
  
  <!-- Font preloads for better performance -->
  <link rel="preload" href="/fonts/Geist/geist-v4-latin-regular.woff2" as="font" type="font/woff2" crossorigin>
  <link rel="preload" href="/fonts/Geist/geist-v4-latin-500.woff2" as="font" type="font/woff2" crossorigin>
  <link rel="preload" href="/fonts/Geist/geist-v4-latin-700.woff2" as="font" type="font/woff2" crossorigin>
  <link rel="preload" href="/fonts/Minecraft%20Seven/Minecraft-Seven_v2.woff2" as="font" type="font/woff2" crossorigin>
  
  <!-- Tabler Icons CSS -->
  <link rel="stylesheet" href="/node_modules/@tabler/icons-webfont/dist/tabler-icons-outline.min.css">
  
  <!-- Prevent FOUC by hiding content until Utrecht components load -->
  <style>
    body { visibility: hidden; }
    body.utrecht-ready { visibility: visible; }
  </style>
</head>
<body>
  <a href="#main-content" class="skip-link">Spring naar content</a>
  
  <main id="main-content">
    <slot />
  </main>
  
  <!-- Load Utrecht components with proper timing -->
  <script type="module">
    // Load Utrecht components before showing content
    (async () => {
      try {
        // Import Utrecht components
        await import('@utrecht/web-component-library-stencil/dist/utrecht/utrecht.esm.js');
        
        // Wait for key components to be defined
        await Promise.all([
          customElements.whenDefined('utrecht-document'),
          customElements.whenDefined('utrecht-heading'),
          customElements.whenDefined('utrecht-paragraph'),
          customElements.whenDefined('utrecht-table'),
          customElements.whenDefined('utrecht-badge')
        ]);
        
        // Show content after components are ready
        document.body.classList.add('utrecht-ready');
        console.log('Utrecht components loaded and ready');
      } catch (error) {
        console.error('Failed to load Utrecht components:', error);
        // Show content anyway if loading fails
        document.body.classList.add('utrecht-ready');
      }
    })();
  </script>
</body>
</html>

<style is:global>
  @import '../styles/reset.css';
  @import '../styles/global.css';
  @import '../styles/minecraft.css';
  @import '../styles/animations.css';
  @import '../styles/components/discord-button.css';
</style>