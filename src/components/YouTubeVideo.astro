---
interface Props {
  videoId: string;
  title?: string;
  width?: string;
  height?: string;
}

const { videoId, title = "YouTube video player", width = "560", height = "315" } = Astro.props;
---

<div class="youtube-video-container">
  <div class="youtube-video-wrapper">
    <iframe 
      width={width}
      height={height}
      src={`https://www.youtube.com/embed/${videoId}?rel=0&modestbranding=1&hd=1&mute=1`}
      title={title}
      frameborder="0"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
      referrerpolicy="strict-origin-when-cross-origin"
      allowfullscreen
    >
    </iframe>
    
  </div>
</div>

<style>
  .youtube-video-container {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: var(--space-md) 0;
    width: 100%;
  }

  .youtube-video-wrapper {
    position: relative;
    width: 100%;
    max-width: 600px;
    aspect-ratio: 16 / 9;
    background: var(--root-color--secondary);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
    border: 3px solid var(--root-color--support);
  }

  .youtube-video-wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
    border-radius: 9px;
    background: transparent;
  }

  /* Focus styles for accessibility */
  .youtube-video-wrapper:focus-within {
    outline: 3px dotted #ffdd00;
    outline-offset: 4px;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .youtube-video-container {
      padding: var(--space-sm) var(--space-sm);
    }
    
    .youtube-video-wrapper {
      max-width: 100%;
      border-radius: 8px;
      border-width: 2px;
    }

  }

  @media (max-width: 480px) {
    .youtube-video-container {
      padding: var(--space-xs) var(--space-sm);
    }
    
    .youtube-video-wrapper {
      border-radius: 6px;
      max-width: 95%;
    }
  }

  /* Network-based optimizations */
  @media (prefers-reduced-data: reduce) {
    .youtube-watch-button::after {
      content: " (Data Saver)";
      font-size: 0.7em;
      opacity: 0.8;
    }
  }

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .youtube-video-wrapper {
      border-width: 4px;
      border-color: var(--root-color--white);
    }
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .youtube-video-wrapper::before {
      animation: none;
    }
  }
</style>