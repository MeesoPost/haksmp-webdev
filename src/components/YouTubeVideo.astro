---
interface Props {
  videoId: string;
  title?: string;
  width?: string;
  height?: string;
}

const { videoId, title = "YouTube video player", width = "560", height = "315" } = Astro.props;
---

<div class="youtube-video-container">
  <div class="youtube-video-wrapper">
    <iframe 
      width={width}
      height={height}
      src={`https://www.youtube.com/embed/${videoId}?rel=0&modestbranding=1&hd=1`}
      title={title}
      frameborder="0"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
      referrerpolicy="strict-origin-when-cross-origin"
      allowfullscreen
    >
    </iframe>
    
    <!-- Watch on YouTube Button -->
    <a 
      href={`https://www.youtube.com/watch?v=${videoId}`}
      target="_blank"
      rel="noopener noreferrer"
      class="youtube-watch-button"
      title="Bekijk in 4K op YouTube"
    >
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M23 7.5C23 6.5 22.5 5.7 21.7 5.4L21.2 5.2C19.6 4.7 12 4.7 12 4.7S4.4 4.7 2.8 5.2L2.3 5.4C1.5 5.7 1 6.5 1 7.5V16.5C1 17.5 1.5 18.3 2.3 18.6L2.8 18.8C4.4 19.3 12 19.3 12 19.3S19.6 19.3 21.2 18.8L21.7 18.6C22.5 18.3 23 17.5 23 16.5V7.5Z" fill="currentColor"/>
        <path d="M9.75 15.02L15.5 12L9.75 8.98V15.02Z" fill="#000"/>
      </svg>
      <span>Bekijk op YouTube</span>
    </a>
  </div>
</div>

<style>
  .youtube-video-container {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: var(--space-md) 0;
    width: 100%;
  }

  .youtube-video-wrapper {
    position: relative;
    width: 100%;
    max-width: 600px;
    aspect-ratio: 16 / 9;
    background: var(--root-color--secondary);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
    border: 3px solid var(--root-color--support);
  }

  .youtube-video-wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
    border-radius: 9px;
    background: transparent;
  }

  /* YouTube Watch Button */
  .youtube-watch-button {
    position: absolute;
    top: 12px;
    right: 12px;
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 8px 12px;
    background: rgba(0, 0, 0, 0.8);
    color: #fff;
    text-decoration: none;
    border-radius: 6px;
    font-family: var(--root-font-family--secondary);
    font-size: 0.875rem;
    font-weight: 500;
    transition: all 0.2s ease;
    backdrop-filter: blur(4px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    z-index: 10;
  }

  .youtube-watch-button:hover {
    background: rgba(255, 0, 0, 0.9);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(255, 0, 0, 0.3);
  }

  .youtube-watch-button:active {
    transform: translateY(0);
  }

  .youtube-watch-button svg {
    width: 18px;
    height: 18px;
    color: #ff0000;
    transition: color 0.2s ease;
  }

  .youtube-watch-button:hover svg {
    color: #fff;
  }

  .youtube-watch-button span {
    white-space: nowrap;
  }

  /* Focus styles for accessibility */
  .youtube-video-wrapper:focus-within {
    outline: 3px dotted #ffdd00;
    outline-offset: 4px;
  }

  .youtube-watch-button:focus {
    outline: 2px dotted #ffdd00;
    outline-offset: 2px;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .youtube-video-container {
      padding: var(--space-sm) var(--space-sm);
    }
    
    .youtube-video-wrapper {
      max-width: 100%;
      border-radius: 8px;
      border-width: 2px;
    }

    .youtube-watch-button {
      top: 8px;
      right: 8px;
      padding: 6px 10px;
      font-size: 0.8rem;
    }

    .youtube-watch-button svg {
      width: 16px;
      height: 16px;
    }
  }

  @media (max-width: 480px) {
    .youtube-video-container {
      padding: var(--space-xs) var(--space-sm);
    }
    
    .youtube-video-wrapper {
      border-radius: 6px;
      max-width: 95%;
    }

    .youtube-watch-button {
      top: 6px;
      right: 6px;
      padding: 4px 8px;
      font-size: 0.75rem;
      gap: 6px;
    }

    .youtube-watch-button span {
      display: none;
    }

    .youtube-watch-button svg {
      width: 14px;
      height: 14px;
    }
  }

  /* Network-based optimizations */
  @media (prefers-reduced-data: reduce) {
    .youtube-watch-button::after {
      content: " (Data Saver)";
      font-size: 0.7em;
      opacity: 0.8;
    }
  }

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .youtube-video-wrapper {
      border-width: 4px;
      border-color: var(--root-color--white);
    }
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .youtube-video-wrapper::before {
      animation: none;
    }
  }
</style>