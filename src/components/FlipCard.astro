---
interface Props {
  value: string;
  label: string;
}

const { value, label } = Astro.props;
---

<div class="flip-card">
  <div class="flip-card__container">
    <!-- Top half -->
    <div class="flip-card__top">
      <span class="flip-card__number">{value}</span>
    </div>
    
    <!-- Bottom half -->
    <div class="flip-card__bottom">
      <span class="flip-card__number">{value}</span>
    </div>
    
    <!-- Flip animation overlays -->
    <div class="flip-card__flip-top">
      <span class="flip-card__number">{value}</span>
    </div>
    
    <div class="flip-card__flip-bottom">
      <span class="flip-card__number">{value}</span>
    </div>
  </div>
  
  <div class="flip-card__label">{label}</div>
</div>

<style>
  .flip-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-xs);
  }

  .flip-card__container {
    position: relative;
    width: 120px;
    height: 140px;
    perspective: 300px;
  }

  /* Top half */
  .flip-card__top {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 50%;
    background: var(--root-color--primary-dark);
    border: 3px solid var(--root-color--support);
    border-bottom: 1.5px solid var(--root-color--support);
    overflow: hidden;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    padding-bottom: 4px;
    clip-path: polygon(
      0 2px, 2px 2px, 2px 0,
      calc(100% - 2px) 0, calc(100% - 2px) 2px, 100% 2px,
      100% 100%, 0 100%
    );
  }

  /* Bottom half */
  .flip-card__bottom {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 50%;
    background: var(--root-color--primary-darkest);
    border: 3px solid var(--root-color--support);
    border-top: 1.5px solid var(--root-color--support);
    overflow: hidden;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding-top: 4px;
    box-shadow: 
      4px 0 0 var(--root-color--primary-darkest),
      0 4px 0 var(--root-color--primary-darkest),
      4px 4px 0 var(--root-color--primary-darkest);
    clip-path: polygon(
      0 0, 100% 0,
      100% calc(100% - 2px), calc(100% - 2px) calc(100% - 2px),
      calc(100% - 2px) 100%, 2px 100%, 2px calc(100% - 2px),
      0 calc(100% - 2px)
    );
  }

  /* Flip animation overlays */
  .flip-card__flip-top {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 50%;
    background: var(--root-color--primary-dark);
    border: 3px solid var(--root-color--support);
    border-bottom: none;
    overflow: hidden;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    padding-bottom: 4px;
    transform-origin: bottom;
    transform: rotateX(0deg);
    opacity: 0;
    pointer-events: none;
    clip-path: polygon(
      0 2px, 2px 2px, 2px 0,
      calc(100% - 2px) 0, calc(100% - 2px) 2px, 100% 2px,
      100% 100%, 0 100%
    );
  }

  .flip-card__flip-bottom {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 50%;
    background: var(--root-color--primary-darkest);
    border: 3px solid var(--root-color--support);
    border-top: none;
    overflow: hidden;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding-top: 4px;
    transform-origin: top;
    transform: rotateX(180deg);
    opacity: 0;
    pointer-events: none;
    clip-path: polygon(
      0 0, 100% 0,
      100% calc(100% - 2px), calc(100% - 2px) calc(100% - 2px),
      calc(100% - 2px) 100%, 2px 100%, 2px calc(100% - 2px),
      0 calc(100% - 2px)
    );
  }

  /* When flipping */
  .flip-card.flipping .flip-card__flip-top {
    opacity: 1;
    animation: flipTop 0.6s cubic-bezier(0.4, 0.0, 0.2, 1);
  }

  .flip-card.flipping .flip-card__flip-bottom {
    opacity: 1;
    animation: flipBottom 0.6s cubic-bezier(0.4, 0.0, 0.2, 1);
    animation-delay: 0.3s;
  }

  .flip-card__number {
    font-family: var(--root-font-family--primary);
    font-size: 4rem;
    font-weight: var(--root-font-weight--bold);
    color: var(--root-color--grey);
    line-height: 1;
    text-shadow: 2px 2px 0 rgba(0, 0, 0, 0.3);
  }

  .flip-card__label {
    font-family: var(--root-font-family--primary);
    font-size: 0.75rem;
    color: var(--root-color--primary-dark);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: var(--root-font-weight--bold);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .flip-card__container {
      width: 80px;
      height: 100px;
    }

    .flip-card__number {
      font-size: 2.5rem;
    }

    .flip-card__label {
      font-size: 0.625rem;
    }
  }

  @media (max-width: 480px) {
    .flip-card__container {
      width: 60px;
      height: 80px;
    }

    .flip-card__number {
      font-size: 2rem;
    }
  }
</style>

